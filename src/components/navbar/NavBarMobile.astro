---
import ThemeIcon from "../ThemeIcon.astro";
---

<ul class="grid grid-cols-4">
    <li
        class:list={[
            "border-b-2 border-e-2",
            "border-background-400 dark:border-background-600",
            "hover:border-b-accent-500",
            "transition-colors",
        ]}
    >
        <div
            class="size-full flex justify-center items-center p-3 cursor-pointer"
        >
            <span
                class:list={[
                    "select-none",
                    "text-background-500",
                    "group-hover/navitem:text-accent-500",
                    "transition-colors",
                ]}
            >
                <span class="select-none">
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="24"
                        height="24"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        class="lucide lucide-menu-icon lucide-menu"
                    >
                        <path d="M4 5h16"></path>
                        <path d="M4 12h16"></path>
                        <path d="M4 19h16"></path>
                    </svg>
                </span>
            </span>
        </div>
    </li>
    <li
        class:list={[
            "col-span-2",
            "border-b-2",
            "border-background-400 dark:border-background-600",
            "hover:border-b-accent-500",
            "transition-colors",
        ]}
    >
        <div
            class="size-full flex justify-center items-center p-3 cursor-pointer"
        >
            <span
                class:list={[
                    "text-xl font-mono font-medium uppercase select-none",
                    "text-background-500",
                    "group-hover/navitem:text-accent-500",
                    "transition-colors",
                ]}
            >
                ottsupi.dev
            </span>
        </div>
    </li>
    <li
        class:list={[
            "border-b-2 border-s-2",
            "border-background-400 dark:border-background-600",
            "hover:border-b-accent-500",
            "transition-colors",
        ]}
    >
        <button
            class="size-full flex justify-center items-center p-3 cursor-pointer"
            x-on:click="switchTheme()"
        >
            <span
                class:list={[
                    "select-none",
                    "text-background-500",
                    "group-hover/navitem:text-accent-500",
                    "transition-colors",
                ]}
            >
                <ThemeIcon />
            </span>
        </button>
    </li>
</ul>
