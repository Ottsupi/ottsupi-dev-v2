---
interface Props {
    title: string;
    company: string;
    startDate: string;
    endDate: string;
}

const { title, company, startDate, endDate } = Astro.props;
---

<div class="flex flex-col px-2 pt-6 border-t-2 border-background-500">
    <span
        class="font-body font-medium text-xl text-text-800 dark:text-text-200"
    >
        {title}
    </span>
    <span class="font-body text-text-800 dark:text-text-200">
        {company}
    </span>
    <span class="font-body mt-2 text-text-800 dark:text-text-200">
        {startDate} &ndash; {endDate}
    </span>
</div>
<div
    class:list={[
        "md:col-span-2 flex flex-col",
        "md:border-t-2 border-background-500",
        "px-2 pt-8 mb-12 gap-y-2",
    ]}
>
    <div class="prose dark:prose-invert prose-text ott-prose">
        <slot name="description">
            <p>Work description</p>
        </slot>
    </div>
    <div
        class:list={[
            "w-fit flex flex-row",
            "border-x-2 border-text-500",
            "divide-x-2 divide-text-500",
            "prose dark:prose-invert prose-text *:px-3 first:ps-0",
        ]}
    >
        <slot name="techStack">
            <p>Frameworks</p>
        </slot>
    </div>
</div>
